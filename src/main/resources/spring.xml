<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context
		 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <bean id="person" class="org.example.to.Person">
        <property name="name" value="derek"/>
        <property name="car" ref="car"/>
    </bean>

    <bean id="car" class="org.example.to.Car">
        <property name="brand" value="porsche"/>
    </bean>
    <bean id="beanFactoryPostProcessor" class="org.example.config.CustomBeanFactoryPostProcessor"></bean>
    <bean id="beanPostProcessor" class="org.example.config.CustomerBeanPostProcessor"></bean>

</beans>